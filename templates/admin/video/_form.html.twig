{{ form_start(form) }}
<div class="row">
    <div class="col-md-4">{{ form_row(form.title) }}</div>
    <div class="col-md-4">{{ form_row(form.date) }}</div>
    <div class="col-md-4">{{ form_row(form.lenght) }}</div>
</div>
<div class="row">
    <div class="col-md-2">{{ form_row(form.link) }}</div>
    <div class="col-md-2">{{ form_row(form.description) }}</div>
    <div class="col-md-2">{{ form_row(form.facebook) }}</div>
    <div class="col-md-2">{{ form_row(form.twitter) }}</div>
    <div class="col-md-2">{{ form_row(form.category) }}</div>

</div>
{{ form_widget(form) }}
<button class="btn btn-primary">{{ button|default('Enregistrer') }}</button>
{{ form_end(form) }}

